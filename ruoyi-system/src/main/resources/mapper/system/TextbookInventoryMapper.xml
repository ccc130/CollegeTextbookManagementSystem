<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TextbookInventoryMapper">
    
    <resultMap type="TextbookInventory" id="TextbookInventoryResult">
        <result property="inventoryId"    column="inventory_id"    />
        <result property="textbookId"    column="textbook_id"    />
        <result property="totalQuantity"    column="total_quantity"    />
        <result property="availableQuantity"    column="available_quantity"    />
    </resultMap>

    <sql id="selectTextbookInventoryVo">
        select inventory_id, textbook_id, total_quantity, available_quantity from textbook_inventory
    </sql>

    <select id="selectTextbookInventoryList" parameterType="TextbookInventory" resultMap="TextbookInventoryResult">
        <include refid="selectTextbookInventoryVo"/>
        <where>  
            <if test="textbookId != null "> and textbook_id = #{textbookId}</if>
        </where>
    </select>
    
    <select id="selectTextbookInventoryByInventoryId" parameterType="Long" resultMap="TextbookInventoryResult">
        <include refid="selectTextbookInventoryVo"/>
        where inventory_id = #{inventoryId}
    </select>

    <insert id="insertTextbookInventory" parameterType="TextbookInventory">
        insert into textbook_inventory
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="inventoryId != null">inventory_id,</if>
            <if test="textbookId != null">textbook_id,</if>
            <if test="totalQuantity != null">total_quantity,</if>
            <if test="availableQuantity != null">available_quantity,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="inventoryId != null">#{inventoryId},</if>
            <if test="textbookId != null">#{textbookId},</if>
            <if test="totalQuantity != null">#{totalQuantity},</if>
            <if test="availableQuantity != null">#{availableQuantity},</if>
         </trim>
    </insert>

    <update id="updateTextbookInventory" parameterType="TextbookInventory">
        update textbook_inventory
        <trim prefix="SET" suffixOverrides=",">
            <if test="textbookId != null">textbook_id = #{textbookId},</if>
            <if test="totalQuantity != null">total_quantity = #{totalQuantity},</if>
            <if test="availableQuantity != null">available_quantity = #{availableQuantity},</if>
        </trim>
        where inventory_id = #{inventoryId}
    </update>

    <delete id="deleteTextbookInventoryByInventoryId" parameterType="Long">
        delete from textbook_inventory where inventory_id = #{inventoryId}
    </delete>

    <delete id="deleteTextbookInventoryByInventoryIds" parameterType="String">
        delete from textbook_inventory where inventory_id in 
        <foreach item="inventoryId" collection="array" open="(" separator="," close=")">
            #{inventoryId}
        </foreach>
    </delete>
</mapper>